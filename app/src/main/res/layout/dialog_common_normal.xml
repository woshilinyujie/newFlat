<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/shape_normal_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:text="发现新版本" />


        <TextView
            android:id="@+id/content_tv"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_29"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="#999999"
            android:text="确认升级？"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/sp_18"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#d33d31"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/split_view"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#e6e6e6" />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="#999999"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>